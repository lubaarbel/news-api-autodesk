<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="url"
            type="String" />
        <variable
            name="clickHandler"
            type="com.example.newsapi.logic.CardClickHandler" />
        <variable
            name="article"
            type="com.example.newsapi.model.response.Article" />
    </data>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="noExcludeDescendants"
        android:orientation="vertical"
        android:elevation="4dp"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/white"
        android:onClick="@{() -> clickHandler.onCardSelected(url)}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/news_header_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:loadImageFromUrl="@{article.imageUrl}"
                />
            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{article.title}"
                tools:text="title"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/news_header_image"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/news_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{article.author}"
                android:visibility="@{article.authorVisibility}"
                tools:text="author"
                android:textSize="14dp"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@+id/news_title"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{article.editedDate}"
                tools:text="time stamp"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@+id/news_author"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/news_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{article.subTitle}"
                tools:text="sub_title"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/news_date"
                app:layout_constraintLeft_toLeftOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>